#: include 'mv_main.kv'

<ADDVSATPOPUP>:
    vid: vsat_id
    vlat: vsat_lat
    vlon: vsat_lon

    title: "Add VSAT Site"
    size_hint: (None, None)
    size: (400, 400)
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: vsat_id
            hint_text: "VSAT ID"
        TextInput:
            id: vsat_lat
            hint_text: "VSAT Latitude"
        TextInput:
            id: vsat_lon
            hint_text: "VSAT Longitude"
        Button:
            text: "Submit"
            on_release: root.dismiss()
        Button:
            text: "Cancel"
            on_release: root.dismiss()

<AppContent>:
    mv_Main: mv_main
    id: appcontent
    BoxLayout:
        orientation: "vertical"

        MainMapView:
            id: mv_main

            BoxLayout:
                orientation: "horizontal"
                size_hint: None,None
                height: "60dp"
                width: "600dp"

                Button:
                    text: "POM"
                    on_press: root.on_btnPress("POM")
                Button:
                    text: "LAE"
                    on_press: root.on_btnPress("LAE")
                Button:
                    text: "MT HAGEN"
                    on_press: root.on_btnPress("HGN")
                Button:
                    text: "KOKOPO"
                    on_press: root.on_btnPress("KPO")
                Button:
                    text: "ADD"
                    on_release: root.showAddPopup()
