<MainMapView>:
    lat: -9.4438
    lon: 147.2003
    zoom: 10
    on_zoom:
        self.zoom = 10 if self.zoom < 10 else self.zoom

<ADDVSATPOPUP>:
    vid: vsat_id
    vlat: vsat_lat
    vlon: vsat_lon

    title: "Add VSAT Site"
    size_hint: (None, None)
    size: (400, 400)
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: vsat_id
            hint_text: "VSAT ID"
        TextInput:
            id: vsat_lat
            hint_text: "VSAT Latitude"
        TextInput:
            id: vsat_lon
            hint_text: "VSAT Longitude"
        Button:
            text: "Submit"
            on_release: root.add_VSite()
        Button:
            text: "Cancel"
            on_release: root.dismiss()

<DELETEVSATPOPUP>:
    vid: vsat_id

    title: "Delete VSAT Site"
    size_hint: (None, None)
    size: (400, 400)

    BoxLayout:
        orientation: "vertical"

        TextInput:
            id: vsat_id
            hint_text: "VSAT ID"
        Button:
            text: "Submit"
            on_release: root.delete_VSite()
        Button:
            text: "Cancel"
            on_release: root.dismiss()
